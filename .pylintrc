[MASTER]
ignore=archive,.venv
ignore-paths=^unit-tests/.*,^archive/.*,.*__pycache__/.*

[MESSAGES CONTROL]
enable=
    C0114,
    C0115,
    C0116,
    C0304,
    E,
    F,
    W

disable=
    R0801,
    R0903,
    R0913,
    R0914,
    W0511

[FORMAT]
max-line-length=100

[BASIC]
good-names=i,j,k,ax,ay,az

[TYPECHECK]
extension-pkg-allow-list=numpy

[DESIGN]
max-args=8
